{
  "name": "Global tabs",
  "version": "0.1",
  "description": "Adds global keybinds to switch tabs",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://www.youtube.com/"
  ],
  "commands": {
    "next-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Open next tab",
      "global": true
    },
    "prev-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Open previous tab",
      "global": true
    },
    "play-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Toggle youtube play pause",
      "global": true
    },
    "mute-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+4"
      },
      "description": "Toggle tab mute",
      "global": true
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/export16px.png",
      "32": "icons/export32px.png",
      "48": "icons/export48px.png",
      "128": "icons/export128px.png"
    }
  }
}
